<Window x:Class="RssFeed.RssFeedConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RssFeed"
        mc:Ignorable="d"
        Icon="pack://application:,,,/RssFeed;component/RSS.ico"
        Title="Rss Feeds" 
        Height="300" 
        Width="600">
    <Grid>
        <DataGrid Name="RssFeedsGrid" 
                  Margin="5,5,5,5" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding RssFeedUri, Mode=TwoWay}" Header="RSS Feed URI" Width="3*" />
                <DataGridTextColumn Binding="{Binding FeedUpdateInterval, Mode=TwoWay}" Header="Update Interval [ms]" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
